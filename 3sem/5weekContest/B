#include <iostream>

#include <string>

#include <cctype>   // для функции isdigit

using namespace std;





int main()

{

	string s;

	getline(cin,s);

	int k = 0;



	for (int i = 0; i < s.size(); i++) {

		if (isdigit(s[i])) if ((s[i]%2)==0) k++;



	}



	cout << k;

	system("pause");





	return 0;

}
